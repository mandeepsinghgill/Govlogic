# GovLogic AI - Production Environment Variables

# Database Configuration
DATABASE_URL="postgresql://govlogic:govlogic@db:5432/govlogic_db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL="redis://redis:6379/0"
CELERY_BROKER_URL="redis://redis:6379/0"
CELERY_RESULT_BACKEND="redis://redis:6379/0"

# Security
SECRET_KEY="your-production-secret-key-change-this"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
WORKERS=4

# Frontend Configuration
VITE_API_URL="https://api.govlogic.com"
FRONTEND_URL="https://govlogic.com"

# AI/LLM Configuration
OPENAI_API_KEY="sk-your-key-here"
ANTHROPIC_API_KEY="your-anthropic-key-here"
DEFAULT_LLM_PROVIDER="openai"
DEFAULT_LLM_MODEL="gpt-4"

# External Services
SAM_GOV_API_KEY="your-sam-gov-key"
SENDGRID_API_KEY="your-sendgrid-key"
STRIPE_PUBLIC_KEY="pk_live_your-key"
STRIPE_SECRET_KEY="sk_live_your-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Feature Flags
GRANTS_MODE="true"
VOICE_MODE="false"
LOCAL_LLM="false"
FEDRAMP="false"
DEBUG="false"

# File Storage
UPLOAD_DIR="/data/uploads"
MAX_UPLOAD_SIZE=52428800

# CORS Configuration
CORS_ORIGINS=["https://govlogic.com", "https://www.govlogic.com"]

# Logging
LOG_LEVEL="INFO"
LOG_FILE="/var/log/govlogic/app.log"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
DATADOG_API_KEY="your-datadog-key"

