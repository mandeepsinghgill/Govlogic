# ============================================================
# GovSureAI Production Environment Configuration Template
# ============================================================
# Copy this file to .env and configure for your setup

# ------------------------------------------------------------
# ARCHITECTURE CHOICE
# ------------------------------------------------------------
# Uncomment ONE of these options:

# OPTION 1: Same Domain (govsureai.com/api)
# VITE_API_URL=

# OPTION 2: Subdomain (api.govsureai.com)
# VITE_API_URL=https://api.govsureai.com

# ------------------------------------------------------------
# Database
# ------------------------------------------------------------
DATABASE_URL=postgresql://GovSure:GovSure@postgres:5432/GovSure
POSTGRES_USER=GovSure
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=GovSure

# ------------------------------------------------------------
# Redis & Celery
# ------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ------------------------------------------------------------
# Security
# ------------------------------------------------------------
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_IN_PRODUCTION

# ------------------------------------------------------------
# API Keys (Optional)
# ------------------------------------------------------------
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
SAM_GOV_API_KEY=

# ------------------------------------------------------------
# CORS (Important for subdomain setup)
# ------------------------------------------------------------
CORS_ORIGINS=https://govsureai.com,https://www.govsureai.com
CORS_ALLOW_CREDENTIALS=true

