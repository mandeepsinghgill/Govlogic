# ============================================================================
# GovLogic GovConAI - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://GovSure:GovSure@localhost:5432/GovSure

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================
# OpenAI API Key (required for GPT-4 support)
OPENAI_API_KEY=sk-...

# Anthropic API Key (optional, for Claude support)
ANTHROPIC_API_KEY=

# Default LLM Provider (openai, anthropic, or local)
DEFAULT_LLM_PROVIDER=openai

# Default LLM Model (gpt-4, gpt-3.5-turbo, claude-3-opus, etc.)
DEFAULT_LLM_MODEL=gpt-4

# ============================================================================
# FEATURE FLAGS
# ============================================================================
GRANTS_MODE=true
VOICE_MODE=false
LOCAL_LLM=false
FEDRAMP=false
DEBUG=true

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# SAM.gov API Key for opportunity integration
SAM_GOV_API_KEY=

# SendGrid API Key for email notifications
SENDGRID_API_KEY=

# Stripe Keys for payment processing
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# DocuSign Integration Key for document signing
DOCUSIGN_INTEGRATION_KEY=

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=/tmp/GovSure/uploads
MAX_UPLOAD_SIZE=52428800

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=GovLogic GovConAI
APP_VERSION=1.0.0
API_V1_PREFIX=/api/v1
